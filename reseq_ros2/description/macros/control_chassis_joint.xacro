<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!--   
        Creates the hardware interface for a the joint between two modules chassis

        @param id: the id of the joint (starting from 2)
    -->

    <xacro:macro name="control_chassis_joint_factory" params="id">

        <joint name="mod${id}__yaw_joint">
            <state_interface name="position" />
        </joint>
        <joint name="mod${id}__roll_joint">
            <state_interface name="position" />
        </joint>
        <joint name="mod${id}__pitch_joint">
            <state_interface name="position" />
        </joint>

    </xacro:macro>
</robot>