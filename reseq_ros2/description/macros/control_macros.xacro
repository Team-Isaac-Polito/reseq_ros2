<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!--   
        Creates the hardware interface for a wheel of a chassis given its position

        @param id: the id of the chassis (starting from 1)
        @param pos: front/back
        @param side: left/right
    -->

    <xacro:macro name="control_wheel_factory" params="id pos side">

        <joint name="${side}_${pos}_wheel_${id}_joint">
            <command_interface name="velocity" />
            <state_interface name="velocity" />
        </joint>

    </xacro:macro>

    <!--   
        Creates the hardware interface for the 3DOF Joint between modules

        @param id: the id of the chassis (starting from 1)
    -->

    <xacro:macro name="control_joint_factory" params="id">

        <joint name="joint_r_${id}_joint">
            <state_interface name="position" />
        </joint>
        <joint name="joint_p_${id}_joint">
            <state_interface name="position" />
        </joint>
        <joint name="joint_y_${id}_joint">
            <state_interface name="position" />
        </joint>

    </xacro:macro>
</robot>